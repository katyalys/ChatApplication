@model ChatApplication.Models.User
@{
}

<h1>Enter</h1>
<form method="post" action="Enter" class="mt-5" name="fform">
  <div class="mb-3">
    <label for="" class="form-label">Name</label>
    <input required type="text" class="form-control" name="name" asp-for="Name">
  </div>
  <div class="mb-3">
    <button type="submit" class="btn btn-primary" onClick="store_data()">Submit</button>
  </div>
</form>

<script>
    function store_data() {
        localStorage.setItem("name", document.fform.name.value);
    }
</script>
